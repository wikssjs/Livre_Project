@using System.Data;
@model IList<Livre>

@{
    ViewData["Title"] = "Liste de Livre";
}

<div class="container mt-5 my-auto">
        <div class="row w-100" id="james">
      
        @foreach (var item in Model)
        {
         

                <div class="col mt-4 my-auto">
                        <div class="d-flex flex-column justify-content-between h-100">
                            <h1 class="">@item.Titre</h1>
                            <img class="rounded-3" src="@item.ImgUrl" alt="" style="max-width:150px">

                            <p class="">Auteur : <span>@item.Auteur</span> 
                            </p>

                            <p class="h4"> Description<span></span>
                            </p>

                            <p class="descrition">@item.Description</p>
                 
                            <form method="post" asp-action="Index" asp-controller="Livres" class="float-end">
                                <div>
                           
                                                <button  OnClientClick="this.disabled=true" asp-route-id = "@item.Id" type="submit"value="Favoris" class="btn bg-primary mt-2" style="width: 100px; pointer-events:@item.disabled" id="favori-button" asp-controller="Livres" asp-action="Index">
                                                        <i class="bi bi-heart"></i>
                                                    Favoris
                                                </button>
                                </div>
          
                            </form>

                        </div>
                    </div>
 }
        </div>

    </div>


 @section Scripts{
        <script>
            let input = document.querySelectorAll('#favori-button');

            for(let i =0 ;i<input.length;i++
{
    input[i].addEventListener('click','this.disabled=true;')
}      
        </script>
    }